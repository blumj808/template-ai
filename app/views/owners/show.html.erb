<div>
  <div>
    <h1>
      Owner #<%= @the_owner.id %> details
    </h1>

    <div>
      <div>
        <a href="/owners">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_owner/<%= @the_owner.id %>">
          Delete owner
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_owner.name %>
      </dd>

      <dt>
        Pet
      </dt>
      <dd>
        <%= @the_owner.pet_id %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_owner.bio %>
      </dd>

      <dt>
        Age
      </dt>
      <dd>
        <%= @the_owner.age %>
      </dd>

      <dt>
        Gender
      </dt>
      <dd>
        <%= @the_owner.gender %>
      </dd>

      <dt>
        Dogs count
      </dt>
      <dd>
        <%= @the_owner.dogs_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_owner.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_owner.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit owner
    </h2>

    <form action="/modify_owner/<%= @the_owner.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_owner.name %>">
      </div>

      <div>
        <label for="pet_id_box">
          Pet
        </label>

        <input type="text" id="pet_id_box" name="query_pet_id" value="<%= @the_owner.pet_id %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <input type="text" id="bio_box" name="query_bio" value="<%= @the_owner.bio %>">
      </div>

      <div>
        <label for="age_box">
          Age
        </label>

        <input type="text" id="age_box" name="query_age" value="<%= @the_owner.age %>">
      </div>

      <div>
        <label for="gender_box">
          Gender
        </label>

        <input type="text" id="gender_box" name="query_gender" value="<%= @the_owner.gender %>">
      </div>

      <div>
        <label for="dogs_count_box">
          Dogs count
        </label>

        <input type="text" id="dogs_count_box" name="query_dogs_count" value="<%= @the_owner.dogs_count %>">
      </div>

      <button>
        Update owner
      </button>
    </form>
  </div>
</div>

<hr>
