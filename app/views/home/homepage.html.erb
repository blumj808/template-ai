<link rel="stylesheet" type="text/css" href="/styles.css">

<style>
  .centered-form {
    text-align: center;
  }
  .centered-form input {
    width: 200px; /* Adjust as needed */
    margin-bottom: 10px;
  }
  .centered-form label {
    display: block;
    margin-bottom: 5px;
  }
  .centered-form button {
    display: block;
    margin: 10px auto; /* Center the button horizontally */
  }
</style>

<h1>
U2DRescue
<br> 
<br> 
Connecting you to shelters with animals in need
</h1>

<% if session.key?('user_id') %>
  <!-- Display this content only if the user is logged in -->
  <a href="/shelters">Participating Shelters</a>
  <br> 
  <br> 
  <a href="/dogs">Available Dogs</a> 
  <br>
  <br>
  <a href="/logout">Logout</a>
<% else %>
  <!-- Display the login form if the user is not logged in -->

  <div class="centered-form">
  <form action="/login" method="post">
    <div>
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required>
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
    </div>
    <div>
      <button type="submit">Login</button>
    </div>
  </form>
<% end %>

<td>
  <img src="/images/rescue.jpg">
</td>
